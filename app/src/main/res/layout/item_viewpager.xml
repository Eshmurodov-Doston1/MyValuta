<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="1"
        app:cardCornerRadius="15dp"
        android:layout_height="180dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/card_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/code"
                android:text="USD"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintHorizontal_bias="0.05"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date"
                app:layout_constraintLeft_toRightOf="@id/code"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/code"
                app:layout_constraintHorizontal_bias="0.9"
                android:text="12.12.2021"
                android:textSize="@dimen/_15sdp"
                android:maxLength="14"
                app:layout_constraintBottom_toBottomOf="@id/code"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/name"
                app:layout_constraintTop_toBottomOf="@id/code"
                app:layout_constraintLeft_toLeftOf="@id/code"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5"
                android:text="name"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="@dimen/_13sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/name_course"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="@id/name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.3"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="@color/white"
                android:text="Dollar AQSH"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.45"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sale"
                app:layout_constraintTop_toTopOf="@id/name"
                app:layout_constraintLeft_toRightOf="@id/name_course"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:maxLines="1"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintHorizontal_bias="0.3"
                android:text="Sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sale_course"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="@id/sale"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.3"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Dollar AQSH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
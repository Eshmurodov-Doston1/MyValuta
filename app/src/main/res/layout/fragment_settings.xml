<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tema"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.9"
        android:background="@drawable/constrant"
        android:elevation="1dp"
        app:layout_constraintVertical_bias="0.05"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            app:layout_constraintHorizontal_bias="0.05"
            android:textSize="@dimen/_15sdp"
            android:text="Kunduzgi"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.rm.rmswitch.RMSwitch
            android:id="@+id/myswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:switchBkgCheckedColor="#00B238"
            app:switchBkgNotCheckedColor="#F1F4F4"
            app:switchToggleCheckedColor="#F1F4F4"
            app:switchToggleNotCheckedColor="#00B238" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/language"
        app:layout_constraintTop_toBottomOf="@id/tema"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.9"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/constrant"
        android:elevation="1dp"
        app:layout_constraintVertical_bias="0.03"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            app:layout_constraintHorizontal_bias="0.05"
            android:textSize="@dimen/_15sdp"
            android:text="O`zbek tili"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            android:textStyle="normal"
            android:textColor="@color/text_color"
            android:text="Uzbek"
            android:textSize="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/share_app"
        app:layout_constraintTop_toBottomOf="@id/language"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.9"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/constrant"
        android:elevation="1dp"
        app:layout_constraintVertical_bias="0.03"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            app:layout_constraintHorizontal_bias="0.05"
            android:textSize="@dimen/_15sdp"
            android:text="Ulashish"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            android:src="@drawable/ic_share"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info"
        app:layout_constraintTop_toBottomOf="@id/share_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.9"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/constrant"
        android:elevation="1dp"
        app:layout_constraintVertical_bias="0.03"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            app:layout_constraintHorizontal_bias="0.05"
            android:textSize="@dimen/_15sdp"
            android:text="Ilova haqida"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:src="@drawable/ic_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
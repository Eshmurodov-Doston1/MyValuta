<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:background="@drawable/dialog_my"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_150sdp">
        <TextView
            android:id="@+id/text_valuta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.05"
            android:text="IlovaHaqida"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/line1"
            app:layout_constraintTop_toBottomOf="@id/text_valuta"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            android:background="#B6B3B3"
            app:layout_constraintWidth_percent="0.9"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/name_app"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="@id/line1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_17sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phone"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@id/name_app"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.15"
            android:text="Phone: +998(99) 420-62-78"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/name_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/email"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@id/name_app"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.18"
            android:text="Mail: eshmurodovdoston630@gmail.com"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>